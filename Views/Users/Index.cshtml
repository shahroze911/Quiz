@model IEnumerable<Quiz.Models.User>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table id="userTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Role
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.RoleName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary btn-sm mr-1" })
                            @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-info btn-sm mr-1" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script>$(document).ready(function () {
            $('#userTable').DataTable({
                "paging": true, // Enable pagination
                "ordering": true, // Enable sorting
                "info": true, // Show table information
                "searching": true // Enable searching/filtering
            });
        });</script>
}
